/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  @apply bg-black text-warmGray-100 h-full;
}

html {
  @apply h-full;
}

a {
  @apply text-blue-500 visited:text-indigo-500 hover:underline;
}

p {
  @apply text-warmGray-300 py-3;
}

.header {
  @apply text-center border-b border-warmGray-400 pb-1;
}

.text-right {
  @apply text-right;
}
