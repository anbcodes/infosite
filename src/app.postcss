/* Write your global styles here, in PostCSS syntax */
@tailwind base;
@tailwind components;
@tailwind utilities;

body {
  @apply bg-black text-stone-300 h-full;
}

html {
  @apply h-full;
}

a {
  @apply text-blue-500 visited:text-indigo-500 hover:underline;
}

p {
  @apply text-stone-300 pb-3;
}

@layer utilities {
  .header-c {
    @apply text-center header;
  }
  .header {
    @apply border-b border-stone-400 mb-3 pb-1;
  }
}

.darklink {
  @apply text-stone-500 visited:text-stone-500 pr-3;
}

.darklink-nopad {
  @apply text-stone-500 visited:text-stone-500;
}

.links {
  @apply flex flex-wrap;
}

h1 {
  @apply header-c text-xl;
}

h2 {
  @apply header-c text-lg;
}

h3 {
  @apply header text-left;
}

ul {
  @apply list-disc pl-10 pb-3;
}

ol {
  @apply list-decimal pl-10 pb-3;
}
